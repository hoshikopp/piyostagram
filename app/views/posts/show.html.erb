<div class="page-header">
  <h1>投稿詳細</h1>
</div>

<div class="post_show">
  <div class="container">
    <div class="col-md-8 col-md-offset-2">
      <div class="row">
        <div class="col-md-12 col-sm-6 panel panel-default">
          <div class="panel-heading">
            <p>ユーザー名:<%=@post.user.name %></p>
          </div>
          <div class="panel-body">
            <div class="row">
              <p>内容:<%=@post.content%></p>
              <p id="notice"><%= notice %></p>
              <strong>Image:</strong>
              <%= image_tag @post.image,class:'img-responsive center-block'%>
              <%= link_to '編集する', edit_post_path(@post) %>
              |
              <%= link_to '戻る', posts_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="col-md-4 col-md-offset-1">
        <div class="row">
          <% unless @post.user_id == current_user.id %>
            <% if @nice.present? %>
              <%= link_to 'いいねを解除する', nice_path(post_id:@post.id),method: :delete,class: 'btn btn-primary'%>
            <% end %>
            <%= link_to 'いいねする', nices_path(post_id:@post.id),method: :post,class: 'btn btn-warning'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>