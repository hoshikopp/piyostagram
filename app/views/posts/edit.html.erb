<div class="page-header">
  <h1>編集する</h1>
</div>


<%= form_with(model:@post,local: true, url: choose_new_or_edit,class:'form-horizontal',role: 'form')do |form|%>
<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <div class="form-group">
        <div class="post_content">
          <%=form.label :内容 %>
          <%=form.text_field :content,class:"form-control content_form"%>
        </div>
      </div>
        <%=form.submit'更新する',class:'btn btn-warning' %>
    </div>
  </div>
</div>
<% end %>
