 </div>

   <div class="container">
     <div class="col-md-8 col-md-offset-2">
       <div class="row">
         <div class="col-md-12 col-sm-6">
           <table class="table table-striped table-responsive">
             <% @nice_posts.each_with_index do |nice,idx| %>
               <tr>
                 <td><%= idx + 1 %>.<%= nice.content %></td>
                 <td><%= image_tag nice.image,class:'img-responsive center-block' %></td>
               </tr>
            <% end %>
           </table>
        </div>
      </div>
     </div>
   </div>

